@model List<MiniShopApp.Entity.Concrete.Product>

<h1 class="mt-4">Ürünler</h1>

<div class="card mb-4">
    <div class="card-body">
        <table id="data-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Ad</th>
                    <th>Fiyat</th>
                    <th>Özellikler</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>Son Değiştirilme Tarihi</th>
                    <th>Anasayfa Ürünü mü?</th>
                    <th>Aktif mi?</th>
                    <th>Silinmiş mi?</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                        <td>@($"{product.Price:C0}")</td>
                        <td>@product.Properties</td>
                        <td>@product.CreatedDate.ToShortDateString()</td>
                        <td>@product.ModifiedDate.ToShortDateString()</td>
                        <td>@product.IsHome</td>
                        <td>@product.IsActive</td>
                        <td>@product.IsDeleted</td>
                        <td>
                            <button class="btn btn-danger btn-sm">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                            <button class="btn btn-warning btn-sm">
                                <i class="fa-regular fa-trash-can"></i>
                            </button>
                            <button class="btn btn-info btn-sm">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </button>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Css{
   @await Html.PartialAsync("_DataTablesStylesPartial")
}

@section Js{
    @await Html.PartialAsync("_DataTablesScriptsPartial")
}