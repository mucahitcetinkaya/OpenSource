@model List<MiniShopApp.Entity.Concrete.Category>
<div class="row my-2">
    <div class="col-md-6">
        <h1 class="display-6">Kategoriler</h1>
    </div>
    <div class="col-md-6 d-flex align-items-center justify-content-end">
        <a 
            asp-area="Admin"
            asp-controller="Category"
            asp-action="Create"
            class="btn btn-primary"    
        >Yeni Kategori</a>
    </div>
</div>


<div class="card mb-4">
    <div class="card-body">
        <table id="data-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Ad</th>
                    <th>Açıklama</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>Son Değiştirilme Tarihi</th>
                    <th>Aktif mi?</th>
                    <th>Silinmiş mi?</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td>@category.CreatedDate.ToShortDateString()</td>
                        <td>@category.ModifiedDate.ToShortDateString()</td>
                        <td>@category.IsActive</td>
                        <td>@category.IsDeleted</td>
                        <td>
                            <button class="btn btn-danger btn-sm">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                            <button class="btn btn-warning btn-sm">
                                <i class="fa-regular fa-trash-can"></i>
                            </button>
                            <button class="btn btn-info btn-sm">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </button>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Css{
    @await Html.PartialAsync("_DataTablesStylesPartial")
}

@section Js{
    @await Html.PartialAsync("_DataTablesScriptsPartial")
}