@model BookEditViewModel
<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow-lg border-0 rounded-lg mt-3">
            <div class="card-header">
                <h3 class="font-weight-light mb-2">Kitap Güncelleme</h3>
            </div>
            <div class="card-body">
                <form asp-area="Admin" asp-controller="Book" asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ImageUrl" />
                    <div class="row g-3 mb-3">
                        <div class="col-md-9">
                            <div class="row g-3">
                                <div class="col-md-12">
                                    <div class="form-floating mb-2 mb-md-0">
                                        <input asp-for="Name" class="form-control"
                                               placeholder="Kitap adını giriniz.." />
                                        <label asp-for="Name"></label>
                                    </div>
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <select class="form-select" asp-for="AuthorId" asp-items="@Model.AuthorList"></select>
                                        <label asp-for="AuthorList"></label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <select class="form-select" asp-for="PublisherId" asp-items="@Model.PublisherList"></select>
                                        <label asp-for="PublisherList"></label>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-floating">
                                        <select class="form-select" asp-for="EditionYear" asp-items="@Model.YearList"></select>
                                        <label asp-for="EditionYear"></label>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-floating mb-2 mb-md-0">
                                        <input asp-for="Price" class="form-control" />
                                        <label asp-for="Price"></label>
                                    </div>
                                    <span class="text-danger" asp-validation-for="Price"></span>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-floating mb-2 mb-md-0">
                                        <input asp-for="EditionNumber" class="form-control" />
                                        <label asp-for="EditionNumber"></label>
                                    </div>
                                    <span class="text-danger" asp-validation-for="EditionNumber"></span>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-floating mb-2 mb-md-0">
                                        <input asp-for="Stock" class="form-control" />
                                        <label asp-for="Stock"></label>
                                    </div>
                                    <span class="text-danger" asp-validation-for="Stock"></span>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-floating mb-2 mb-md-0">
                                        <input asp-for="PageCount" class="form-control" />
                                        <label asp-for="PageCount"></label>
                                    </div>
                                    <span class="text-danger" asp-validation-for="PageCount"></span>
                                </div>
                                <div class="col-md-12">
                                    <div class="">
                                        <label class="form-label" asp-for="Description"></label>
                                        <textarea class="form-control" asp-for="Description" id="ckeditor-text"></textarea>
                                    </div>
                                    <span class="text-danger" asp-validation-for="Description"></span>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <input class="form-check-input" asp-for="IsActive" type="checkbox">
                                        <label class="form-check-label" for="IsActive">
                                            Aktif mi?
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <input class="form-check-input" asp-for="IsHome" type="checkbox">
                                        <label class="form-check-label" asp-for="IsHome"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div>
                                <label class="form-label" asp-for="CategoryList"></label>
                                @foreach (var category in Model.CategoryList)
                                {
                                    <div>
                                        <input type="checkbox" class="form-check-input" value="@category.Id" name="SelectedCategoryIds" 
                                        @(Model.SelectedCategoryIds.Any(sc=>sc==category.Id) ? "checked" : "")
                                        />
                                        <label>@category.Name</label>
                                    </div>
                                }
                                <span class="text-danger">@ViewBag.CategoryErrorMessage</span>
                            </div>
                            <div class="mt-3">
                                <label asp-fModelor="ImageFile"></label>
                                <img src="~/images/books/@Model.ImageUrl" id="image-viewer" class="w-100" style="width: 257px; height: 400px;" />
                                <span class="text-danger" asp-validation-for="ImageFile"></span>
                                <input class="d-none" type="file" asp-for="ImageFile" accept="image/" />
                                <div class="mt-3 d-grid">
                                    <label for="ImageFile" class="btn btn-success">Resim Yükle</label>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="mt-4 mb-0">
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">Değişiklikleri Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center py-3">
                <div class="small">
                    <a asp-area="Admin" asp-controller="Book" asp-action="Index">
                        Tüm Kitapları Listele
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Js{
    @*@await Html.PartialAsync("_ValidationScriptsPartial");*@
    @await Html.PartialAsync("_CkEditorPartialJs")
    <script>
        $("#ImageFile").on("change",function(event){
            const selectedFiles = event.target.files;
            $("#image-viewer").attr("src",window.URL.createObjectURL(selectedFiles[0]));
        });
    </script>
}

@section Css{
    <script src="//cdn.ckeditor.com/4.21.0/full/ckeditor.js"></script>
}