@model AuthorEditViewModel
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-lg border-0 rounded-lg mt-3">
            <div class="card-header">
                <div class="row">
                    <div class="col">
                        <h3 class="font-weight-light mb-2">Yazar Güncelleme</h3>
                    </div>
                    <div class="col text-end">
                        <span>
                            <a asp-area="Admin" asp-controller="Author" asp-action="Index"
                               class="btn btn-link">Vazgeç</a>
                        </span>
                    </div>
                </div>

            </div>
            <div class="card-body">
                <form asp-area="Admin" asp-controller="Author" asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <div class="row g-3 mb-3">
                        <div class="col-md-4">
                            <div class="form-floating mb-2 mb-md-0">
                                <input asp-for="FirstName" class="form-control"
                                       placeholder="Kategori adını giriniz.." />
                                <label asp-for="FirstName"></label>
                            </div>
                            <span class="text-danger" asp-validation-for="FirstName"></span>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating mb-2 mb-md-0">
                                <input asp-for="LastName" class="form-control" placeholder="Kategori adını giriniz.." />
                                <label asp-for="LastName"></label>
                            </div>
                            <span class="text-danger" asp-validation-for="LastName"></span>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating">
                                <select class="form-select" asp-for="BirthOfYear" asp-items="@Model.Years"></select>
                                <label asp-for="BirthOfYear"></label>
                            </div>
                            <span class="text-danger" asp-validation-for="BirthOfYear"></span>
                        </div>
                        <div class="col-md-12">
                            <div class="">
                                <label class="form-label" asp-for="About"></label>
                                <textarea class="form-control fs-1" asp-for="About" id="ckeditor-text"></textarea>
                                <span class="text-danger" asp-validation-for="About"></span>
                            </div>
                            <span class="text-danger" asp-validation-for="About"></span>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="IsActive" type="checkbox">
                                <label class="form-check-label" asp-for="IsActive"></label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" asp-for="IsDeleted" type="checkbox">
                                <label class="form-check-label" asp-for="IsDeleted"></label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" asp-for="IsAlive" type="checkbox">
                                <label class="form-check-label" asp-for="IsAlive"></label>
                            </div>
                        </div>
                        <div class="col-md-6 text-end d-flex align-items-end justify-content-end gap-2">

                            <label for="photo-file" class="btn btn-secondary btn-sm">Resmi Değiştir</label>
                            <label id="photo-url">@Model.PhotoUrl</label>
                            <input class="d-none" type="file" id="photo-file" name="PhotoFile" accept="image/*">

                            <img id="photo-viewer" src="~/images/authors/@Model.PhotoUrl" width="60" />
                        </div>
                    </div>

                    <div class="mt-4 mb-0">
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">Değişiklikleri Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center py-3">
                <div class="small">
                    <a asp-area="Admin" asp-controller="Author" asp-action="Index">
                        Tüm Yazarları Listele
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Js{
    @await Html.PartialAsync("_ValidationScriptsPartial");
    @await Html.PartialAsync("_CkEditorPartialJs")
    <script>
        //const photoFile = document.getElementById("photo-file");
        //const photoViewer = document.getElementById("photo-viewer");
        //const photoUrl = document.getElementById("photo-url");

        //photoFile.addEventListener("change", function(event){
        //    let selectedFiles = event.target.files;
        //    photoViewer.setAttribute("src",window.URL.createObjectURL(selectedFiles[0]));
        //    photoUrl.innerText = photoViewer.getAttribute("src");
        //});
        $("#photo-file").on("change",function(event){
            let selectedFiles = event.target.files;
            $("#photo-viewer").attr("src",window.URL.createObjectURL(selectedFiles[0]));
            $("#photo-url").text($("#photo-viewer").attr("src"));
        });
    </script>
}

@section Css{
    <script src="//cdn.ckeditor.com/4.21.0/full/ckeditor.js"></script>
}