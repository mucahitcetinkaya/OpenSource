@model List<BookViewModel>
@{
    ViewData["Title"] = "BooksApp Ana Sayfa";
}
<div class="row">
    <div class="col-2">
        @await Component.InvokeAsync("Categories")
        @await Component.InvokeAsync("Authors")
        @await Component.InvokeAsync("Publishers")
    </div>
    <div class="col-10">
        <div class="row g-3">
            @foreach (var bookViewModel in Model)
            {
                <div class="col-2">
                    @await Html.PartialAsync("_BookPartial",bookViewModel)
                </div>
            }
        </div>
    </div>
</div>
