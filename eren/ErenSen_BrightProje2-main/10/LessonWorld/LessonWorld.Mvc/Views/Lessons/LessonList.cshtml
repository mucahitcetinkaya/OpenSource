@model List<LessonViewModel>
@{
    ViewData["Title"] = "LessonWorld Ana Sayfa";
}
<div class="row">
    <div class="col-2">
        @await Component.InvokeAsync("Categories")
        @await Component.InvokeAsync("Teachers")
        @await Component.InvokeAsync("Schools")
    </div>
    <div class="col-9">
        <div class="row g-3">
            @foreach (var lessonViewModel in Model)
            {
                <div class="col-3">
                    @await Html.PartialAsync("_LessonPartial",lessonViewModel)
                </div>
            }
        </div>
    </div>

</div>
