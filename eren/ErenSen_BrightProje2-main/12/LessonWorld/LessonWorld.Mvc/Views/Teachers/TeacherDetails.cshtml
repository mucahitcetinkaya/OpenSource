@model TeacherDetailsViewModel
<div class="container pt-4">
    <div class="row">
        <div class="col-3">
            <div class="row">
                <div class="col-12 pb-3">
                    <img class="w-100" src="/images/teacher/@Model.PhotoUrl" />
                </div>
            </div>
        </div>
        <div class="col-5 bg-light p-3">
            <h3 class="display-6 fs-4 fw-normal text-danger">@Model.Name</h3>
            <a asp-area=""
               asp-controller="Home"
               asp-action="LessonDetails"
               asp-route-url="@Model.LessonUrl"
               class="display-6 fs-6 fw-normal text-primary">
                @Model.LessonName
            </a>

            <div class="mt-3">
                @for (int i = 0; i < 5; i++)
                {
                    <i class="fa-regular fa-star text-success fa-xs"></i>
                }
            </div>
            @*Öğretmen Ayrıntıları*@
            <div class="mt-3">
                <h3 class="display-6 fs-4 fw-normal text-danger mt-2">Öğretmen Ayrıntıları</h3>
                <h6 class="d-inline">Kategori:</h6>
                @for (int i = 0; i < Model.Categories.Count; i++)
                {
                    <span class="fs-6 text-warning">@Model.Categories[i].Name @(i == Model.Categories.Count - 1 ? "" : ",")</span>
                }
            </div>
        </div>
        <div class="col-4">
            @*Fiyat Bölümü*@
            <div class="border-1 border-warning border p-3 pb-0">
                <div class="row">
                    <div class="col-5 d-flex justify-content-center align-items-center">
                        <h5 class="fs-3 text-primary">@($"{Model.Price:C2}")</h5>
                    </div>
                    <div class="col-7">
                        <form asp-area=""
                              asp-controller="Cart"
                              asp-action="AddToCart"
                              method="post">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-warning">Sepete Ekle</button>
                            <input class="form-control d-inline" style="width:60px;" type="number" name="quantity" min="1" max="9" value="1" />
                        </form>
                    </div>
                </div>
            </div>
            @*Ders Bilgileri Bilgileri*@
            <div>
                <h3 class="bg-warning p-2 fs-6 text-white fw-bold display-6 mt-3">@Model.LessonName</h3>
                <p class="fs-6">@Html.Raw(Model.LessonAbout)</p>
            </div>
        </div>
    </div>
</div>
