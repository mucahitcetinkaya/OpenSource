@model List<TeacherViewModel>
@{
    ViewData["Title"] = "LessonWorld Ana Sayfa";
}
<div class="row">

    <div class="col-10">
        <div class="row g-3">
            @foreach (var teacherViewModel in Model)
            {
                <div class="col-2">
                    @await Html.PartialAsync("_TeacherPartial",teacherViewModel)
                </div>
            }
        </div>
    </div>
    <div class="col-2">
        @await Component.InvokeAsync("Categories")
        @await Component.InvokeAsync("Lessons")
        @await Component.InvokeAsync("Schools")
    </div>
</div>
